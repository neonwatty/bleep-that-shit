{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "app/**/{error,layout,page,route}.{js,jsx,ts,tsx}",
    "app/workers/**/*.ts",
    "lib/blog/*.ts"
  ],
  "project": ["**/*.{js,jsx,ts,tsx}"],
  "ignore": ["**/*.test.{ts,tsx}", "**/*.spec.{ts,tsx}", "tests/archived/**"],
  "ignoreDependencies": [
    "@ffmpeg/core",
    "@ffmpeg/ffmpeg",
    "@ffmpeg/util",
    "dexie",
    "dexie-react-hooks",
    "file-type",
    "plyr",
    "plyr-react",
    "react-joyride",
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser",
    "eslint-config-next",
    "eslint-config-prettier",
    "eslint-plugin-prettier",
    "gray-matter",
    "remark",
    "remark-html",
    "rehype-raw",
    "rehype-stringify",
    "remark-parse",
    "remark-rehype",
    "unified"
  ],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  }
}
