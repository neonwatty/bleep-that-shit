<%# app/views/pages/transcription_test.html.erb %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Audio Transcription</h1>
    
    <div class="bg-white shadow-md rounded-lg p-6">
      <!-- File Upload Area (no Rails form) -->
      <div id="dropzone" class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer hover:border-blue-500 transition-colors">
        <p class="text-gray-600">Drag and drop your audio file here or click to browse</p>
        <input type="file" id="fileInput" accept="audio/*" class="hidden">
      </div>
      <!-- Language Selection -->
      <div class="mt-6">
        <label for="language" class="block text-sm font-medium text-gray-700 mb-2">Language</label>
        <select id="language" class="w-full p-2 border border-gray-300 rounded-md">
          <option value="en">English</option>
          <option value="es">Spanish</option>
          <option value="fr">French</option>
          <option value="de">German</option>
          <option value="it">Italian</option>
          <option value="pt">Portuguese</option>
          <option value="nl">Dutch</option>
          <option value="pl">Polish</option>
          <option value="ru">Russian</option>
          <option value="ja">Japanese</option>
          <option value="ko">Korean</option>
          <option value="zh">Chinese</option>
        </select>
      </div>
      <!-- Model Selection -->
      <div class="mt-6">
        <label class="block text-sm font-medium text-gray-700 mb-2">Model</label>
        <div class="space-y-2">
          <label class="inline-flex items-center">
            <input type="radio" name="model" value="base" class="form-radio" checked>
            <span class="ml-2">Base (Faster, less accurate)</span>
          </label>
          <br>
          <label class="inline-flex items-center">
            <input type="radio" name="model" value="large" class="form-radio">
            <span class="ml-2">Large (Slower, more accurate)</span>
          </label>
        </div>
      </div>
      <!-- Bleep Sound Selection -->
      <div class="mt-6">
        <label for="bleepSound" class="block text-sm font-medium text-gray-700 mb-2">Bleep Sound</label>
        <select id="bleepSound" class="w-full p-2 border border-gray-300 rounded-md">
          <option value="">Select a bleep sound...</option>
        </select>
        <button id="bleepPreviewButton" type="button" class="mt-2 px-4 py-1 bg-gray-200 rounded hover:bg-gray-300">Preview</button>
        <span id="bleepSoundName" class="ml-2 text-sm text-gray-600"></span>
      </div>
      <!-- Transcribe Button -->
      <div class="mt-6">
        <button id="transcribeButton" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">Transcribe</button>
      </div>
      <!-- Progress Bar -->
      <div class="mt-6">
        <div class="w-full bg-gray-200 rounded-full h-2.5">
          <div id="progress" class="bg-blue-600 h-2.5 rounded-full transition-all duration-300" style="width: 0%"></div>
        </div>
        <div id="progressText" class="text-center text-sm text-gray-600 mt-2">0%</div>
      </div>
      <!-- Error Display -->
      <div id="error" class="mt-4 p-4 bg-red-100 text-red-700 rounded-md hidden"></div>
      <!-- Results -->
      <div id="results" class="mt-6 hidden">
        <h2 class="text-xl font-semibold mb-4">Transcription Results</h2>
        <!-- Results will be inserted here by JavaScript -->
      </div>
    </div>
  </div>
</div> 