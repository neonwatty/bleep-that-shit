<h1 class="font-bold text-2xl mb-4">Create Your Account</h1>

<% if @user.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 mb-4 rounded">
    <h2 class="font-semibold mb-2">
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user, url: users_path, local: true, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :email, class: "block font-semibold" %>
    <%= f.email_field :email, class: "border rounded px-2 py-1 w-full" %>
  </div>
  <div>
    <%= f.label :password, class: "block font-semibold" %>
    <%= f.password_field :password, class: "border rounded px-2 py-1 w-full" %>
  </div>
  <div>
    <%= f.label :password_confirmation, class: "block font-semibold" %>
    <%= f.password_field :password_confirmation, class: "border rounded px-2 py-1 w-full" %>
  </div>
  <div>
    <%= f.submit "Create Account", class: "bg-green-600 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
