<div>
  <h1 class="text-2xl font-bold mb-4">Vite Integration Test</h1>
  <p>If you see the HelloComponent message below, Vite is working!</p>
</div>

<!-- User feedback area -->
<div id="upload-feedback" class="w-full max-w-lg mx-auto mb-4"></div>

<!-- Overall upload progress bar -->
<div id="overall-upload-progress" class="w-full bg-gray-200 rounded h-3 mb-4 hidden">
  <div id="overall-upload-progress-bar" class="bg-blue-500 h-3 rounded transition-all duration-200" style="width: 0%"></div>
</div>

<!-- Dropzone upload form for demo -->
<form
  id="my-dropzone"
  class="dropzone flex flex-col items-center justify-center border-2 border-dashed border-blue-400 rounded-lg p-4 sm:p-8 my-8 bg-blue-50 w-full max-w-lg mx-auto min-h-[180px] transition-all duration-200"
  action="/your/upload/endpoint"
  method="post"
  enctype="multipart/form-data"
>
  <div class="dz-message text-blue-700 font-semibold text-center text-base sm:text-lg">
    Drag and drop files here<br class="hidden sm:block" />or click to upload.
  </div>
</form>

<!-- Button to load Whisper model for testing -->
<div class="w-full max-w-lg mx-auto flex justify-center items-center gap-2">
  <button id="load-whisper-model-btn" type="button" class="mt-4 px-6 py-2 bg-indigo-600 text-white rounded shadow hover:bg-indigo-700 transition">Load Whisper Model</button>
  <span id="whisper-model-spinner" class="mt-4 hidden">
    <svg class="animate-spin h-6 w-6 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8z"></path>
    </svg>
  </span>
</div>

<!-- Indeterminate progress bar for model loading -->
<div id="model-loading-progress" class="w-full max-w-lg mx-auto mt-4 hidden">
  <div class="w-full bg-gray-200 rounded h-3 overflow-hidden">
    <div class="bg-indigo-500 h-3 animate-pulse w-full"></div>
  </div>
  <div class="text-center text-sm text-gray-600 mt-1">Loading Whisper model...</div>
</div>

<!-- Error message area for Whisper model loading -->
<div id="whisper-model-error" class="w-full max-w-lg mx-auto text-center text-red-600 font-semibold mt-2 hidden"></div>

<!-- Success message area for Whisper model loading -->
<div id="whisper-model-success" class="w-full max-w-lg mx-auto text-center text-green-600 font-semibold mt-2 hidden"></div>
